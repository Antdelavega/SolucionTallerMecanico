@model IEnumerable<AspTallerMecanico.Data.DDL.ServicioMecanico>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo</a>
</p>
<table class="table table-bordered table-hover table-striped table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngresoVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntregaVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionServicio)
            </th>
            <th>
                Vehiculo Servicio
            </th>
            <th>
                ID Servicio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngresoVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntregaVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiculoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoServicioId)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
